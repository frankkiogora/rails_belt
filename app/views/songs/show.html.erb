<div class="container">
<div class ="row">
    <h3 class="text text-success">Other who added the song ~ <%= @song.title %> by <%= @song.artist %> </h3>
    <table class="table table-hover">
      <thead class="text text-success">
        <tr>
          <th>Name</th>
          <th>Song added</th>
        </tr>
      </thead>
      <tbody>
      <% if @song.users %>
      <% @song.users.each do |user| %>
        <tr>
          <td><a href="/users/<%= user.id %>"><%= user.first_name %> <%= user.last_name %></a></td>
          <td><%= Playlist.find_by(user: user,song: @song).add_count %></td>
        </tr>
      <% end %>
      <% end %>
      </tbody>
    </table>
    </div>
</div>