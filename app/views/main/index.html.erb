<div class='container'>
<div class='row'>
    <div class='col-sm-8'>
        <h3> Sign Up </h3>
        <p>Please fill this form to create an account</p>

        <form method='post' action='/users'>
            <input type='hidden' name="form_value" value='register'>
            <input type='hidden' name="authenticity_token" value='<%= form_authenticity_token %>'>

            <div class="form-group <%= flash[:hasError] %>">
            <label class="control-label" for='user[first_name]'>First Name :</label>
            <input class="form-control"  type='text' name='user[first_name]' placeholder='enter firstname'>
                <% if flash[:register] %>
                <% flash[:register].each do |field,value| %>
                    <% if field=='first_name' %>
                    <% value.each do |error| %>
                        <span class='small text-danger'><%= field.capitalize %> <%= error %> : </span>
                    <% end %>
                    <% end %>
                <% end %>
                <% end %>
            </div>

            <div class="form-group <%= flash[:hasError] %>">
            <label class="control-label" for='last_name'>Last Name :</label>
            <input class="form-control"  type='text' name='user[last_name]' placeholder='enter lastname'>
                <% if flash[:register] %>
                <% flash[:register].each do |field,value| %>
                    <% if field=='last_name' %>
                    <% value.each do |error| %>
                        <span class='small text-danger'><%= field.capitalize %> <%= error %> : </span>
                    <% end %>
                    <% end %>
                <% end %>
                <% end %>
            </div>

            <div class="form-group <%= flash[:hasError] %>">
            <label class="control-label" for='email'>Email :</label>
            <input class="form-control"  type='text' name='user[email]' placeholder='enter email'>
                <% if flash[:register] %>
                <% flash[:register].each do |field,value| %>
                    <% if field=='email' %>
                    <% value.each do |error| %>
                        <span class='small text-danger'><%= field.capitalize %> <%= error %> : </span>
                    <% end %>
                    <% end %>
                <% end %>
                <% end %>
            </div>

            <div class="form-group <%= flash[:hasError] %>">
            <label class="control-label" for='password'>Password :</label>
            <input class="form-control"  type='password' name='user[password]' placeholder=''>
                <% if !flash[:register] %>
                <span class='small text-info'>eight characters required </span>
                <% end %>
                <% if flash[:register] %>
                <% flash[:register].each do |field,value| %>
                    <% if field=='password' || field=='password_confirmation' %>
                    <span class='small text-danger'> invalid password </span>
                    <% end %>
                <% end %>
                <% end %>
            </div>

            <div class="form-group <%= flash[:hassError] %>">
            <label class="control-label" for='password_confirmation'>Confirm Password :</label>
            <input class="form-control"  type='password' name='user[password_confirmation]' placeholder=''>
                <% if flash[:register] %>
                <% flash[:register].each do |field,value| %>
                    <% if field=='password_confirmation' %>
                    <% value.each do |error| %>
                    <span class='small text-danger'> <%= field.capitalize %> <%= error %> </span>
                    <% end %>
                    <% end %>
                <% end %>
                <% end %>
            </div>

            <input class="btn btn-primary" type='submit' value='Register'>
        </form>
    </div>

    <div class='col-sm-8'>
    <h3> Log In </h3>
    <form method='post' action='/users'>
        <% if flash[:sign_in] %>
            <span class='text-danger'><%= flash[:sign_in] %></span>
        <% end %>
        <input type='hidden' name="form_value" value='sign_in'>
        <input type='hidden' name="authenticity_token" value='<%= form_authenticity_token %>'>
        <div class="form-group <%= flash[:has_Error] %>">
        <label for='email'>Email :</label>
        <input class="form-control"  type='text' name='email' placeholder='Enter email'>
        </div>
        <div class="form-group <%= flash[:has_Error] %>">
        <label for='password'>Password :</label>
        <input class="form-control"  type='password' name='password'>
        </div>
        <input class="btn btn-success" type='submit' value='Login'>
    </form>
</div>
</div>
</div>